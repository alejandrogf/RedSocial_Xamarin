<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RedContactos.View.PrincipalView"
             Title="{Binding Titulo}">
  <StackLayout>
    <Button Text="{Binding TxtBtnContacto}" BackgroundColor="Green" BorderRadius="10" FontSize="24" 
            HorizontalOptions="Center" Command="{Binding cmdVerContactos}"></Button>
    <Button Text="{Binding TxtBtnMensaje}" BackgroundColor="Teal" BorderRadius="10" FontSize="24"
            HorizontalOptions="Center" Command="{Binding cmdEnviarMensaje}"></Button>
  </StackLayout>
</ContentPage>